<%
  case controller_name
    when 'home'
      @home_active = 'active'
    when 'users'
      @users_active = 'active'
    when 'community_news'
      @news_active = 'active'
    when 'events'
      @events_active = 'active'  
    when 'searchs'
      @searchs_active = 'active'
    else
      @forums_active = 'active'
  end
%>
<div class="icon-bar four-up" role="navigation" id="bottomNav">
  <%=link_to root_path,class: "item #{@home_active}, hidden" do%>
    <i class="fa fa-home"></i>
  <%end%>
  <%=link_to community_news_index_path,class: "item #{@news_active}" do%>
    <i class="fa fa-cart-plus"></i>
  <%end%>
  <%=link_to '#',class: "item #{@events_active}" do%>
    <i class="fa fa-calendar"></i>
  <%end%>
  <%=link_to '#',class: "item #{@forums_active}" do%>
    <i class="fa fa-bullhorn"></i>
  <%end%>
  <%if current_user
      @user_url = profile_path(current_user.id)
    else
      @user_url= login_path
    end%>
  <%=link_to @user_url,class: "item #{@users_active}" do%>
    <i class="fa fa-user"></i>
  <%end%>
 
</div>