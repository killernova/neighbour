            //  0.66: '#0f0', // green
            //  1:    '#00f'  // blue
            // };
            // TagCanvas.weightGradient = gradient;

              TagCanvas.Start('myCanvas','tags',{
                shape: "hcylinder",
                lock: "x",
                textColour: null,//'rgb(230,110,37)',
                textHeight: 20,
                outlineColour: '#0000ff',
                reverse: true,
                depth: 0.5,
